generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user")
  isActive  Boolean  @default(true)
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  price        Decimal
  comparePrice Decimal?
  cost         Decimal?
  stock        Int      @default(0)
  images       String? // JSON string of image URLs
  category     String?
  brand        String?
  status       String   @default("active")
  isFeatured   Boolean  @default(false)

  // Specs Integration
  specsSlug String? // Slug for mobile-specs-server (e.g. "samsung_galaxy_a54")
  specsJson String? // Cached technical specs (JSON)

  // Variant Specs
  ram     String? // e.g. "4GB", "8GB"
  storage String? // e.g. "128GB", "256GB"

  isNew         Boolean     @default(false)
  // Second Hand Fields
  batteryHealth Int? // e.g. 85, 90, 100
  warranty      String? // e.g. "12 Ay ZK Garantisi", "Apple Türkiye Garantili"
  condition     String? // e.g. "Mükemmel", "Çok İyi", "İyi" -> "excellent", "good", "fair"
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]
}

model Order {
  id            Int         @id @default(autoincrement())
  orderNumber   String      @unique
  customerName  String?
  userId        Int?
  user          User?       @relation(fields: [userId], references: [id])
  totalAmount   Decimal
  status        String      @default("Processing")
  paymentStatus String      @default("Pending")
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}

model Appointment {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String
  date        DateTime
  time        String
  description String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Repair {
  id             Int       @id @default(autoincrement())
  customer_name  String
  phone          String
  device_model   String
  issue          String
  tracking_code  String    @unique
  status         String    @default("received")
  estimated_cost Decimal?
  lockPassword   String? // For numeric/text passwords
  lockPattern    String? // For pattern locks (e.g. "1-2-3-6-9")
  images         String? // JSON string of image URLs
  privateNotes   String? // Internal technician notes
  receivedBy     String? // Staff who received the device
  requestedDate  DateTime? // Customer requested delivery date
  estimatedDate  DateTime? // Shop estimated completion date
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String
  is_read   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  excerpt     String?
  content     String
  coverImage  String?
  status      String    @default("draft")
  author      String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model SiteSettings {
  id            Int      @id @default(autoincrement())
  site_name     String   @default("Zk İletişim")
  site_url      String   @default("https://zkiletisim.com")
  description   String?
  email         String?
  phone         String?
  whatsapp      String?
  instagram     String?
  address       String?
  maps_embed    String?
  meta_title    String?
  meta_keywords String?
  robots_txt    String?
  updatedAt     DateTime @updatedAt
}

model Sale {
  id          Int      @id @default(autoincrement())
  productId   Int?
  productName String
  soldPrice   Decimal
  costPrice   Decimal?
  profit      Decimal?
  quantity    Int      @default(1)
  soldAt      DateTime @default(now())
}

model Debtor {
  id           Int                 @id @default(autoincrement())
  name         String
  phone        String?
  balance      Decimal             @default(0)
  taxOffice    String?
  taxNumber    String?
  city         String?
  district     String?
  notes        String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  transactions DebtorTransaction[]
}

model DebtorTransaction {
  id          Int      @id @default(autoincrement())
  debtorId    Int
  debtor      Debtor   @relation(fields: [debtorId], references: [id], onDelete: Cascade)
  type        String // "DEBT" (Borç Eklendi/Satış) or "PAYMENT" (Ödeme Alındı)
  amount      Decimal
  description String?
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String // CREATE, UPDATE, DELETE, LOGIN, ETC.
  entity    String // Product, Debtor, System
  entityId  String? // ID of the related entity
  details   String? // JSON string containing details
  username  String? // Who performed the action
  createdAt DateTime @default(now())
}

model Campaign {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  isActive    Boolean   @default(false)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
